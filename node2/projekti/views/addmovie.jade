extends layout

block content
    div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        h1.text-center Add movie
          div.account-wall
            form(class='add-movie', action='/addmovie', method='POST')
              input(type='text', name='title' class='form-control', placeholder='title',required, autofocus)
              button(class='btn btn-lg btn-primary btn-block', type='submit') Add
              span.clearfix
          #message
          if message
            h1.text-center.error-message #{message}